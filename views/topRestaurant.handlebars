{{>navbar}}
<h1>熱門餐廳</h1>
<hr />
<div class="container">
  {{#each restaurants}}
  <div class="card mb-3 " style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{this.image}}" alt="..." class="img-fluid">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="badge badge-secondary text-wrap" style="width: 6rem;">
            收藏數：{{this.favoritedCount}}
          </span>
          <p class="card-text">{{this.description}}</p>
          {{!-- 按鈕 --}}
          <div class="d-flex">
            {{!-- 詳細頁 --}}
            <a href="/restaurants/{{this.id}}" class="btn btn-primary mx-2">Show</a>
            {{!-- 最愛按鈕 --}}
            {{#if this.isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="post"><button
                class="btn btn-danger">移除收藏</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="post"><button class="btn btn-success">加入收藏</button></form>
            {{/if}}
          </div>
          {{!-- 按鈕 --}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>